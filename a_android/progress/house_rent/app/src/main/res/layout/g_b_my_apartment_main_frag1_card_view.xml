<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/apartment_frag1_upper"
            android:layout_height="110dp"
            android:layout_width="match_parent"
            android:background="@color/Blue4">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/apartment_main_frag1_btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/apartment_frag1_upper_txt1"
                android:backgroundTint="@color/White"
                app:rippleColor="@color/Green4"
                android:layout_margin="@dimen/fab_margin"
                app:fabCustomSize="60dp"
                app:maxImageSize="40dp"
                android:src="@drawable/add_rent_info">

            </com.google.android.material.floatingactionbutton.FloatingActionButton>

            <TextView
                android:id="@+id/apartment_frag1_upper_txt1"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="25dp"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:text="@string/add_new_rent"
                android:textSize="27dp"
                android:textStyle="bold"
                android:textColor="@color/TextColor2"
                android:background="@color/White"
                android:textAlignment="center"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/apartment_frag1_lower"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_below="@id/apartment_frag1_upper">

            <androidx.cardview.widget.CardView
                android:id="@+id/apartment_frag1_card1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="16dp">

                <RelativeLayout
                    android:id="@+id/apartment_frag1_relative_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Green5">

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt1"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/collect_rent_id"
                        android:textSize="19sp"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/apartment_main_frag1_btn1"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/apartment_main_frag1_txt1"
                        android:text="Click Here"
                        android:textSize="19sp"
                        android:textColor="@color/Green4"
                        android:backgroundTint="@color/White"
                        app:cornerRadius="45dp"
                        android:textAllCaps="false"
                        android:textAlignment="center"
                        android:textAppearance="@style/Widget.MaterialComponents.Button"
                        />

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt2"
                        android:layout_width="230dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="15dp"
                        android:layout_below="@+id/apartment_main_frag1_txt1"
                        android:text="@string/tap_to_get_code"
                        android:textSize="19sp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/Green4"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                        android:background="@color/White"
                        app:cornerRadius="45dp"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/apartment_frag1_card2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@id/apartment_frag1_card1"
                app:cardElevation="16dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:id="@+id/apartment_frag1_relative_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/Green5">

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/owner_name"
                        android:textSize="19sp"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt4"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/apartment_main_frag1_txt3"
                        android:text="@string/ownername"
                        android:textSize="19sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/apartment_frag1_card3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@id/apartment_frag1_card2"
                app:cardElevation="16dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:id="@+id/apartment_frag1_relative_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Green5">

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt5"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/contact_no"
                        android:textSize="19sp"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt6"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/apartment_main_frag1_txt5"
                        android:hint="123456789012345"
                        android:textSize="19sp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/apartment_main_frag1_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="35dp"
                        android:layout_below="@id/apartment_main_frag1_txt6"
                        android:backgroundTint="@color/White"
                        app:rippleColor="@color/Green4"
                        android:layout_margin="@dimen/fab_margin"
                        app:fabCustomSize="50dp"
                        app:maxImageSize="30dp"
                        android:src="@drawable/add_rent_info"
                        >

                    </com.google.android.material.floatingactionbutton.FloatingActionButton>

                    <EditText
                        android:id="@+id/apartment_main_frag1_input1"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_below="@+id/apartment_main_frag1_txt6"
                        android:hint="@string/enter_another_number"
                        android:inputType="number"
                        android:textSize="19sp"
                        android:visibility="invisible"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/apartment_frag1_card4"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@id/apartment_frag1_card3"
                app:cardElevation="16dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:id="@+id/apartment_frag1_relative_layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Green5">

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt7"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:text="@string/address"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="@color/White"
                        />

                    <EditText
                        android:id="@+id/apartment_main_frag1_input2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:padding="10dp"
                        android:layout_toRightOf="@+id/apartment_main_frag1_txt7"
                        android:hint="@string/confirm_location"
                        android:textSize="19sp"
                        android:background="@color/White"
                        android:textAlignment="center"
                        android:backgroundTint="@color/White"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/apartment_frag1_card5"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@id/apartment_frag1_card4"
                app:cardElevation="16dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:id="@+id/apartment_frag1_relative_layout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Green5">

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt9"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/rent_amount"
                        android:textSize="19sp"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:id="@+id/apartment_main_frag1_input3"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_toRightOf="@+id/apartment_main_frag1_txt9"
                        android:hint="@string/rent_amount_def"
                        android:textSize="19sp"
                        android:textAlignment="center"
                        android:background="@color/White"
                        android:backgroundTint="@color/White"/>

                    <Spinner
                        android:id="@+id/list_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        android:spinnerMode="dropdown"
                        android:layout_toRightOf="@+id/apartment_main_frag1_input3"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/apartment_frag1_card6"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@id/apartment_frag1_card5"
                app:cardElevation="16dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:id="@+id/apartment_frag1_relative_layout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Green5">

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt12"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/facility"
                        android:textSize="19sp"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:id="@+id/apartment_main_frag1_input4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_toRightOf="@+id/apartment_main_frag1_txt12"
                        android:hint="@string/description_of_home"
                        android:textSize="19sp"
                        android:textAlignment="center"
                        android:background="@color/White"
                        android:backgroundTint="@color/White"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/apartment_frag1_card7"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@id/apartment_frag1_card6"
                app:cardElevation="16dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:id="@+id/apartment_frag1_relative_layout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Green5">

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt13"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/active_status"
                        android:textSize="19sp"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt14"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/apartment_main_frag1_txt13"
                        android:text="off"
                        android:textSize="13sp"
                        android:textAlignment="center"
                        android:background="@color/Red"/>


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/apartment_main_frag1_swt1"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/apartment_main_frag1_txt14"
                        />

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt15"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_toRightOf="@+id/apartment_main_frag1_swt1"
                        android:text="on"
                        android:textSize="13sp"
                        android:textAlignment="center"
                        android:background="@color/White"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/apartment_frag1_card8"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@id/apartment_frag1_card7"
                app:cardElevation="16dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:id="@+id/apartment_frag1_relative_layout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White">

                    <TextView
                        android:id="@+id/apartment_main_frag1_txt16"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/upload_photo"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="@color/Blue4"
                        android:textAlignment="center"
                        android:background="@color/White"
                        />

                    <ImageButton
                        android:id="@+id/apartment_main_frag1_img1_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/images_of_house"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/apartment_main_frag1_txt16"
                        android:src="@drawable/ic_add_to_photos_black_50dp"
                        />

                    <ImageView
                        android:id="@+id/apartment_main_frag1_img2"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_below="@+id/apartment_main_frag1_img1_btn"
                        android:src="@drawable/ic_image_black_60dp"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/apartment_main_frag1_btn_form_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Blue5"
        android:layout_margin="@dimen/fab_margin"
        app:rippleColor="@color/Green4"
        app:fabCustomSize="60dp"
        app:maxImageSize="30dp"
        android:src="@drawable/floating_publish"
        android:layout_gravity="bottom|start"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/apartment_main_frag1_btn_form_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Blue5"
        android:layout_margin="@dimen/fab_margin"
        app:rippleColor="@color/Green4"
        app:fabCustomSize="60dp"
        app:maxImageSize="30dp"
        android:src="@drawable/floating_save"
        android:layout_gravity="bottom|end"/>

</com.google.android.material.card.MaterialCardView>