<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/b_user_main_drawer"
    tools:openDrawer="start">

    <include
    android:id="@+id/user_home_cont"
    layout="@layout/b_c_main_toolbar"/>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/b_a_user_home_main_nav"
        android:fitsSystemWindows="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        app:headerLayout="@layout/b_b_nav_drawer_header_main"
        app:menu="@menu/nav_b_a_user_home_main_menu"
        android:background="@color/White"
        app:itemIconTint="@color/Green4"
        app:itemTextColor="@color/Blue4">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>