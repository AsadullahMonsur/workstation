<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>


<FlowPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="java_web_browser.HomepageController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="700.0">
         <top>
            <AnchorPane prefHeight="100.0" prefWidth="700.0" style="-fx-background-color: #150646;" BorderPane.alignment="CENTER">
               <children>
                  <Label layoutX="250.0" layoutY="30.0" prefHeight="40.0" prefWidth="200.0" text="Java Browser" textAlignment="CENTER" textFill="#08ff25">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
         </top>
         <left>
            <AnchorPane prefHeight="300.0" prefWidth="300.0" style="-fx-border-color: blue; -fx-border-width: 5;" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="url_text" layoutX="10.0" layoutY="10.0" prefHeight="50.0" prefWidth="300.0" promptText="Enter URL">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <Button fx:id="search_btn" layoutX="60.0" layoutY="100.0" mnemonicParsing="false" onAction="#search_on_web" prefHeight="30.0" prefWidth="200.0" text="Search" />
               </children>
            </AnchorPane>
         </left>
         <center>
            <AnchorPane fx:id="display" prefHeight="350.0" prefWidth="500.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</FlowPane>
